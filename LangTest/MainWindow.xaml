<Window x:Class="LangTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangTest"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <local:DecimalToStringConverter x:Key="DecimalToStringConverter" />
    </Window.Resources>

    <Grid Margin="20">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" xml:lang="en-US">
            <TextBlock Text="Language = en-US" />
            <TextBlock Text="{Binding DecimalValue, Converter={StaticResource DecimalToStringConverter}}" />
        </StackPanel>

        <StackPanel Grid.Column="1" xml:lang="de-DE">
            <TextBlock Text="Language = de-DE" />
            <TextBlock Text="{Binding DecimalValue, Converter={StaticResource DecimalToStringConverter}}" />
        </StackPanel>
    </Grid>
</Window>
